<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="150dp"
        android:right="-500dp"
        android:top="-500dp">
        <rotate
            android:fromDegrees="12"
            android:pivotX="100"
            android:pivotY="200"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="-300dp"
        android:left="0dp"
        android:right="-300dp"
        android:top="500dp">
        <rotate
            android:fromDegrees="12"
            android:pivotX="100"
            android:pivotY="0"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>